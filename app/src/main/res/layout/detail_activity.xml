<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:background="@color/white"/>

        <ca.vijaysharma.resume.utils.BezelImageView
            android:id="@+id/hero_image"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/circle_item_diameter"
            android:layout_height="@dimen/circle_item_diameter"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="?android:actionBarSize"
            android:clickable="true"
            android:focusable="true"
            app:maskDrawable="@drawable/circle_mask"
            app:borderDrawable="@drawable/circle_mask"
            android:src="@drawable/avatar" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="?android:actionBarSize"
            android:layout_marginEnd="12dp"
            android:orientation="vertical"
            android:layout_gravity="end">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                tools:text="Vijay Sharma"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                tools:text="Senior Mobile Developer"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                tools:text="Ottawa"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="?android:actionBarSize"
            android:layout_marginEnd="12dp"
            android:orientation="vertical"
            android:layout_gravity="end">

        </LinearLayout>
    </FrameLayout>
</ScrollView>