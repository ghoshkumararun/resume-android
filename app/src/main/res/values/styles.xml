<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <item name="android:windowBackground">@color/background_color</item>
    </style>

    <style name="ResumeTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/ResumeActionBarStyle</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="DetailTheme" parent="AppTheme">

    </style>

    <style name="ResumeActionBarStyle" parent="android:Theme.Material.Light">
        <item name="android:background">#64000000</item>
    </style>

</resources>
