<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/purple">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <corners android:radius="@dimen/circle_item_diameter"/>
            <stroke android:color="@color/purple" android:width="@dimen/circle_item_border_width"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
    <item android:top="@dimen/circle_item_border_width" android:left="@dimen/circle_item_border_width" android:right="@dimen/circle_item_border_width" android:bottom="@dimen/circle_item_border_width">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <corners android:radius="@dimen/circle_inner_item_diameter"/>
            <stroke android:color="@color/background_color" android:width="@dimen/circle_item_border_width"/>
            <solid android:color="@color/white"/>
        </shape>
    </item>
</ripple>